<%- include('../header') %>

<%- include('../menu') %>

<!-- Start Include skills-->

<div id="skills">

    <div id="aboutMeName"> Experiences and Skills</div>

    <ul id="skillsList">
        <% companies.forEach( company => { %>
        <li>
            <div id="skillsLine"><%- company.titleFunction %> at <%- company.name %> ( <%- company.dtInit %> - <%- company.dtEnd %> )</div>
            <div id="skillsSubLine">
                <i><%- company.skills %></i>
            </div>
            <div id="skillsMore">
                <button class="button" style="vertical-align:middle"><span>
                        <a href="/about/skillsDetail/<%- company.id %>">More </a> 
                    </span>
                </button>
            </div>
        </li>
        <% }) %>
    </ul>
</div>

<!-- End Include skills-->

<%- include('../footer') %>